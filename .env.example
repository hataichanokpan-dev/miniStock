# Firebase Configuration
# Get these from your Firebase Console: https://console.firebase.google.com/
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_DATABASE_URL=https://your_project_id.firebaseio.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Stock Data API Configuration (Phase 1: Data Layer Foundation)
# API Provider Selection
# Choose one: Financial Modeling Prep (recommended) or Alpha Vantage (free tier)
# Financial Modeling Prep: https://site.financialmodelingprep.com/developer/docs
# Alpha Vantage: https://www.alphavantage.co/support/#api-key

# Primary Stock Data API (required)
NEXT_PUBLIC_STOCK_API_KEY=your_api_key_here

# API Provider: 'fmp' or 'alphavantage' (default: 'fmp')
NEXT_PUBLIC_API_PROVIDER=fmp

# API Base URLs
NEXT_PUBLIC_FMP_API_URL=https://financialmodelingprep.com/api/v3
NEXT_PUBLIC_ALPHA_VANTAGE_API_URL=https://www.alphavantage.co/query

# Rate Limiting (requests per minute)
STOCK_API_RATE_LIMIT=300

# Cache Settings (in seconds)
# Quote cache: 15 seconds (real-time data)
CACHE_TTL_QUOTE=15
# Fundamentals cache: 1 hour
CACHE_TTL_FUNDAMENTALS=3600
# Historical data cache: 1 day
CACHE_TTL_HISTORICAL=86400

# Optional: Alternative API Keys
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
FINNHUB_API_KEY=your_finnhub_key

# Application Settings
NEXT_PUBLIC_DEFAULT_MARKET=SET
NEXT_PUBLIC_DEFAULT_CURRENCY=THB
NEXT_PUBLIC_APP_URL=http://localhost:3000
